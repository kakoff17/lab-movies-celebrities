<div>

    <h1>Crear una pelicula</h1>

    <form action="/movies/create" method="post">

        <label for="title">Titulo de la pelicula</label>
        <input type="text" name="title">
    <br>
        <label for="genre">Género</label>
        <input type="text" name="genre">
    <br>
        <label for="plot">Trama de la pelicula</label>
        <input type="text" name="plot">

    <br>

        <label for="cast">Protagonista</label>
        <select name="cast" multiple="true">

        {{#each this.allCelebrities}}
            <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}

    </select>
    <br>

        <button>Añadir pelicula</button>
    </form>

</div>

</div>